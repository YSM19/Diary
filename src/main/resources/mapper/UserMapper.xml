<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backend.diary.mapper.UserMapper">
    
    <resultMap id="UserResultMap" type="com.backend.diary.entity.UserEntity">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="username" column="username"/>
    </resultMap>

    <select id="findByEmail" resultMap="UserResultMap">
        SELECT * FROM user WHERE email = #{email}
    </select>
    
    <select id="findById" resultType="com.backend.diary.entity.UserEntity">
        SELECT * FROM user WHERE id = #{id}
    </select>
    
    <select id="existsById" resultType="boolean">
        SELECT COUNT(*) > 0 FROM user WHERE id = #{id}
    </select>
    
    <insert id="save" parameterType="com.backend.diary.entity.UserEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (email, password, username)
        VALUES (#{email}, #{password}, #{username})
    </insert>
    
    <update id="update" parameterType="com.backend.diary.entity.UserEntity">
        UPDATE user 
        SET password = #{password},
            username = #{username}
        WHERE email = #{email}
    </update>
    
    <delete id="delete">
        DELETE FROM user WHERE email = #{email}
    </delete>
</mapper> 